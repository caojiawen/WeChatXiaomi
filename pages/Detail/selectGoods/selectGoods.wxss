/* pages/Detail/selectGoods/selectGoods.wxss */

/* 商品基本信息 */
.goodsImage{
  width: 200rpx;
  height: 200rpx;
  border:2rpx solid gainsboro;
}
.goodsContent{
  margin-left: 20rpx;
  line-height: 1.4;
  font-size: 16px
}
.goodsPrice{
  margin-top:20rpx;
}
.goodsPrice>text{
  color:red;
  margin-right: 20rpx;
}
.ColorSelect>view{
  margin-right: 30rpx;
}
/* 购买数量 */
.buyNum{
  width: 300rpx;
  border:2rpx solid rgb(218, 217, 217);
  border-radius: 10rpx;
  font-size: 16px;
  overflow: hidden;
  z-index: 0
}
.buyNum>input{
  width: 33%;
  height: 100rpx;
  text-align: center;
}
.buyNum>input:nth-child(2){
  border-left:2rpx solid rgb(218, 217, 217);
  border-right:2rpx solid rgb(218, 217, 217);
}
/* 意外保护 */
.insurance{
  font-size: 12px;
  margin-bottom:20rpx;
  flex-wrap: wrap;
}
.insurance view{
  width: 43%;
}


/* 确认按钮 */
.confirmButton{
  background: #ff6902;
  color: white;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  overflow: hidden;
}